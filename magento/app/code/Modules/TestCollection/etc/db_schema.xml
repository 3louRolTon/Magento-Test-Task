<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="modules_testcollection_table" resource="default" engine="innodb" comment="Test table">
        <column xsi:type="int" name="id" padding="11" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="50" comment="Name banner"/>
        <column xsi:type="text" name="text" nullable="false" comment="Banner text"/>
        <column xsi:type="datetime" name="date" nullable="true" comment="Banner popel"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>

</schema>
